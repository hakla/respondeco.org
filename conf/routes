# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                         common.Application.index
GET         /app                      common.Application.app
GET         /admin                    common.Application.admin

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)
GET         /i18n/*file               controllers.Assets.at(path="/public/i18n", file)
GET         /views/*file              controllers.Assets.at(path="/public/views", file)
GET         /images/*file             controllers.Assets.at(path="/public/images", file)

# API stuff
## Account CRUD
GET         /api/accounts                 business.accounts.AccountCtrl.findAll
POST        /api/accounts                 business.accounts.AccountCtrl.create
GET         /api/accounts/*id             business.accounts.AccountCtrl.findById(id: Long)
PUT         /api/accounts/*id             business.accounts.AccountCtrl.update(id: Long)

## Authentication
POST        /api/auth/login               authentication.AuthController.handleLogin
POST        /api/auth/logout              authentication.AuthController.handleLogout

## Organization CRUD
GET         /api/organisations            business.organisations.OrganisationCtrl.findAll
GET         /api/organisations/*id        business.organisations.OrganisationCtrl.findById(id: Long)
PUT         /api/organisations/*id        business.organisations.OrganisationCtrl.update(id: Long)
POST        /api/organisations            business.organisations.OrganisationCtrl.create
