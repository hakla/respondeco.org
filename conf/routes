# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                        controllers.Application.index
GET         /app                     controllers.Application.app

# Account CRUD
POST        /account                controllers.AccountCtrl.create
GET         /account/*id            controllers.AccountCtrl.findById(id: Long)

# Organization CRUD
GET         /organization            controllers.OrganizationCtrl.findAll
GET         /organization/*id        controllers.OrganizationCtrl.findById(id: Long)
PUT         /organization            controllers.OrganizationCtrl.update

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.versioned(path="/public", file: Asset)
GET         /i18n/*file              controllers.Assets.at(path="/public/i18n", file)
GET         /views/*file             controllers.Assets.at(path="/public/views", file)
GET         /images/*file            controllers.Assets.at(path="/public/images", file)
