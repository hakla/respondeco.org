<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <!--
        Added the entity ISOCategory.
    -->
    <changeSet id="20150623213000" author="Clemens Puehringer">
        <createTable tableName="T_ISO_CATEGORY">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_by" type="varchar(50)" defaultValue="system">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
            <column name="is_active" type="boolean" defaultValue="true"/>
            <column name="super_category_id" type="bigint">
            </column>
            <column name="key" type="varchar(100)">
            </column>
        </createTable>

        <addForeignKeyConstraint
            constraintName="fk_category_super_category_id"
            baseColumnNames="super_category_id"
            baseTableName="T_ISO_CATEGORY"
            referencedColumnNames="id"
            referencedTableName="T_ISO_CATEGORY"/>

    </changeSet>
</databaseChangeLog>
